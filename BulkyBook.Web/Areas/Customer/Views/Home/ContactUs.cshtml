    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-5">
    <div class="row">
        <div class="col-md-4">
            @*<h2 class="text-center font-weight-bold">Contacts</h2>*@
            @*<address class="pt-5">
            <p>@Model.SiteSetting.SiteName</p>
            <p><span class="font-weight-bold">Address :</span>@Html.Raw(Model.SiteSetting.Address) </p>
            <p><span class="font-weight-bold">Phone Number</span> : @Model.SiteSetting.SiteTell</p>
