@model BulkyBook.DomainClass.Setting.SiteSetting

@{
    ViewData["Title"] = "AboutUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-5">
    <div class="row">
        <div class="col-md-8">
            <h2 class="text-center">About Us</h2>
            <p class="mt-5 pt-5">@Html.Raw(Model.SiteDescription)</p>
        </div>
        <div class="col-md-4">
            <h2 class="text-center">Website Logo</h2>
            <img src="/images/DefaultImages/2832_R1NUIEpPUyAwMzktMTM0.jpg"
                 width="100%" class="mt-3" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 alert alert-info text-center" style="font-size:18px">
            <address>
                <p>
                    @if (!string.IsNullOrEmpty(Model.SiteName))
                    {
                        <span>
                            @Model.SiteName |
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(Model.SiteEmail))
                    {
                        <span>
                            Email : @Model.SiteEmail |
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(Model.SiteTell))
                    {
                        <span>
                            Tell : @Model.SiteEmail |
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(Model.SiteFax))
                    {
                        <span>
                            Fax : @Model.SiteFax |
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <span>
                            @Html.Raw(Model.Address)
                        </span>
                    }
                </p>
            </address>
        </div>
    </div>

</div>
