@model BulkyBook.ViewModel.Ticket.TicketVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.AntiForgeryToken()

    <div class="row p-2">
        <div class="col-12 border-bottom">
            <h2 class="text-dark">Create Ticket</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label>FullName</label>
                </div>
                <div class="col-8">
                    <input asp-for="FullName" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Subject"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" @*onclick="return validateImageInput()"*@ class="btn btn-success form-control">Create</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary form-control">Back To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*<div class="col-4 pt-4">
            <input type="file" name="SliderImage" multiple id="SliderImageInput" />
        </div>*@
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>

        // Validate
        function validateImageInput() {
            if (document.getElementById("SliderImageInput").value == "") {
                swal("Error", "Please select an image", "error");
                return false;
            }

            return true;
        }

    </script>

}