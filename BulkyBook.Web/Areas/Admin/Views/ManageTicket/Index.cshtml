@using BulkyBook.Business.StaticTools

@{
    ViewData["Title"] = "Ticket List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-4">
    <br />
    <div class="row">
        <div class="col-6">
            <h2>Ticket List</h2>
        </div>
        @if (User.IsInRole(SD.Role_User_Indi) || User.IsInRole(SD.Role_User_Comp))
        {
            <div class="col-6 text-right">
                <a href="/Admin/ManageTicket/SubmitTicket" class="btn btn-dark"><i class="fas fa-plus"></i> &nbsp; Create New Ticket</a>
            </div>
        }
    </div>

    <br />
    <br />
    <div class="p-4 border rounded">
        <table id="tblTicket" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Id</th>
                    <th>FullName</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Create Date</th>
                    <th>Status</th>
                    <th>Command</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/LoadDataTable.js"></script>
    <script src="~/js/Custom.js"></script>
}