
@{
    ViewData["Title"] = "Company List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-4">
    <br />
    <div class="row">
        <div class="col-6">
            <h2>Company List</h2>
        </div>
        <div class="col-6 text-right">
            <a href="/Admin/ManageCompany/Upsert" class="btn btn-dark"><i class="fas fa-plus"></i> &nbsp; Create New Company</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblCompany" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>PhoneNumber</th>
                    <th>Authorized</th>
                    <th>Command</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/LoadDataTable.js"></script>
    <script src="~/js/DeleteItemFromDataTable.js"></script>
}