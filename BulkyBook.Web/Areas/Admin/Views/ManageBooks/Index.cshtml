
@{
    ViewData["Title"] = "Book List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-4">
    <br />
    <div class="row">
        <div class="col-6">
            <h2>Book List</h2>
        </div>
        <div class="col-6 text-right">
            <a href="/Admin/ManageBooks/Upsert" class="btn btn-dark"><i class="fas fa-plus"></i> &nbsp; Create New Book</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblBook" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Command</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/LoadDataTable.js"></script>
    <script src="~/js/DeleteItemFromDataTable.js"></script>
}

