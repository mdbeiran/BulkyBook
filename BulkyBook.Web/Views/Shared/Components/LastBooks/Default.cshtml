@model IEnumerable<BulkyBook.DomainClass.Book.Book>
@using BulkyBook.DomainClass.Book
<div class="container mt-5">
    <h3 class="text-primary mb-0">Last Books</h3>
    <div class="row pb-3 bg-white">
        @foreach (Book book in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card" style="border:0px;">
                            <img src="@book.ImageUrl" class="card-img-top rounded" />
                            <div class="pl-1">
                                <p class="card-title h5"><b style="color:#2c3e50">@book.Title</b></p>
                                <p class="card-title text-primary">by <b>@book.Author</b></p>
                            </div>
                            <div style="padding-left:5px;">
                                <p>List Price: <strike><b class="">$@book.Price.ToString("0,00")</b></strike></p>
                            </div>
                            <div style="padding-left:5px;">
                                <p style="color:maroon">As low as: <b class="">$@book.Price100.ToString("0,00")</b></p>
                            </div>
                        </div>
                        <div>
                            <a asp-area="Customer" asp-controller="Book"
                               asp-action="Details" asp-route-id="@book.Id"
                               class="btn btn-primary form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>